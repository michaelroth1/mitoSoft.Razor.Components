@using mitoSoft.Razor.Components.Enums

@inherits LayoutComponentBase

<PageTitle>mitoSoft.Razor.Components.Examples.DotNet6</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <mitoSoft.Razor.Components.ErrorBoundary @ref="_errorBoundary" OnExceptionFired="this.GlobalExceptionFired" Mode="ErrorBoundaryMode.JSModal">
                @Body
            </mitoSoft.Razor.Components.ErrorBoundary>
        </article>
    </main>
</div>

@code{
    private mitoSoft.Razor.Components.ErrorBoundary _errorBoundary = default!;

    private void GlobalExceptionFired(Exception e)
    {
        _errorBoundary.Message = "ChangedExceptionText";
    }
}