@using mitoSoft.Razor.Components.Enums

@inject ErrorBoundaryHandler ErrorBoundaryHandler

@inherits LayoutComponentBase

<PageTitle>mitoSoft.Razor.Components.Examples.DotNet6</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <mitoSoft.Razor.Components.ErrorBoundary Handler="@ErrorBoundaryHandler">
                @Body
            </mitoSoft.Razor.Components.ErrorBoundary>
        </article>
    </main>
</div>

@code {
    private int currentCount = 0;
    private MessageBox _messageBox = default!;
    private InputBox _inputBox = default!;
    private InputBox _inputBoxSync = default!;
    private DerivedModal _derived = default!;

    protected override Task OnInitializedAsync()
    {
        ErrorBoundaryHandler.OnExceptionFired += this.OnGlobalExeptionFired;
        return base.OnInitializedAsync();
    }

    private void OnGlobalExeptionFired(object? sender, ErrorBoundaryEventArgs e)
    {
        e.Message = "Changed exception text";
    }
}